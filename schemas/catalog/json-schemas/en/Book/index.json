{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "@segha/catalog/en/Book",
  "description": "Schemas for Petroglyph Catalog",
  "$defs": {
    "BookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the book"
        },
        "subtitle": {
          "description": "Subtitle of the book",
          "type": "string"
        },
        "description": {
          "description": "Description of the book",
          "type": "string"
        },
        "author": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Authors"
        },
        "published": {
          "type": "string",
          "description": "Year of publication"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Categories"
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "In Progress",
            "Read",
            "Consolidated"
          ],
          "description": "Reading status"
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Topics"
        },
        "rating": {
          "type": "number",
          "description": "Rating of the book"
        },
        "online_rating": {
          "type": "number",
          "description": "Online rating"
        },
        "last_time_read": {
          "type": "string",
          "description": "Last time read"
        },
        "times_read": {
          "type": "number",
          "description": "Times read"
        },
        "type": {
          "type": "string",
          "const": "[[Sources]]"
        },
        "format": {
          "type": "string",
          "const": "[[Books]]"
        },
        "areas": {
          "type": "array",
          "items": {
            "type": "string",
            "const": "[[Knowledge]]"
          }
        },
        "color": {
          "type": "string",
          "const": "#3171B2"
        },
        "icon": {
          "type": "string",
          "const": "book"
        },
        "cover": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "description": "URL of the book in Amazon or similar"
        },
        "read_url": {
          "type": "string",
          "description": "URL of the reading of the book"
        }
      },
      "required": [
        "title",
        "author",
        "published",
        "categories",
        "status",
        "topics",
        "rating",
        "online_rating",
        "last_time_read",
        "times_read",
        "type",
        "format",
        "areas",
        "color",
        "icon",
        "url",
        "read_url"
      ],
      "additionalProperties": false,
      "description": "Book"
    },
    "CatalogBookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the book"
        },
        "subtitle": {
          "description": "Subtitle of the book",
          "type": "string"
        },
        "description": {
          "description": "Description of the book",
          "type": "string"
        },
        "author": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Authors"
        },
        "published": {
          "type": "string",
          "description": "Year of publication"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Categories"
        }
      },
      "required": [
        "title",
        "author",
        "published",
        "categories"
      ],
      "additionalProperties": false,
      "description": "Book: Data obtained from catalogation"
    },
    "DetailedBookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "In Progress",
            "Read",
            "Consolidated"
          ],
          "description": "Reading status"
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Topics"
        },
        "rating": {
          "type": "number",
          "description": "Rating of the book"
        },
        "online_rating": {
          "type": "number",
          "description": "Online rating"
        },
        "last_time_read": {
          "type": "string",
          "description": "Last time read"
        },
        "times_read": {
          "type": "number",
          "description": "Times read"
        }
      },
      "required": [
        "status",
        "topics",
        "rating",
        "online_rating",
        "last_time_read",
        "times_read"
      ],
      "additionalProperties": false,
      "description": "Book: Additional data"
    },
    "MetaBookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "[[Sources]]"
        },
        "format": {
          "type": "string",
          "const": "[[Books]]"
        },
        "areas": {
          "type": "array",
          "items": {
            "type": "string",
            "const": "[[Knowledge]]"
          }
        },
        "color": {
          "type": "string",
          "const": "#3171B2"
        },
        "icon": {
          "type": "string",
          "const": "book"
        },
        "cover": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "description": "URL of the book in Amazon or similar"
        },
        "read_url": {
          "type": "string",
          "description": "URL of the reading of the book"
        }
      },
      "required": [
        "type",
        "format",
        "areas",
        "color",
        "icon",
        "url",
        "read_url"
      ],
      "additionalProperties": false,
      "description": "Book: Metadata of Note"
    }
  }
}