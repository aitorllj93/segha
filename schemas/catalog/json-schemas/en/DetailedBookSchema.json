{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "Pending",
        "In Progress",
        "Read",
        "Consolidated"
      ],
      "description": "Reading status"
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Topics"
    },
    "rating": {
      "type": "number",
      "description": "Rating of the book"
    },
    "online_rating": {
      "type": "number",
      "description": "Online rating"
    },
    "last_time_read": {
      "type": "string",
      "description": "Last time read"
    },
    "times_read": {
      "type": "number",
      "description": "Times read"
    }
  },
  "required": [
    "status",
    "topics",
    "rating",
    "online_rating",
    "last_time_read",
    "times_read"
  ],
  "description": "Book: Additional data"
}