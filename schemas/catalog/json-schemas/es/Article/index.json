{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "@segha/catalog/es/Article",
  "description": "Schemas for Petroglyph Catalog",
  "$defs": {
    "ArticleSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Título del artículo"
        },
        "description": {
          "description": "Descripción",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "excerpt": {
          "description": "Extracto del artículo",
          "type": "string"
        },
        "author": {
          "description": "Autores",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "published": {
          "description": "Año de publicación",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            }
          ]
        },
        "status": {
          "type": "string",
          "enum": [
            "Pendiente",
            "En Proceso",
            "Leído",
            "Consolidado"
          ],
          "description": "Estado de lectura"
        },
        "projects": {
          "description": "Proyectos",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "topics": {
          "description": "Temas",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rating": {
          "description": "Puntuación del artículo",
          "type": "number"
        },
        "type": {
          "type": "string",
          "const": "[[Fuentes]]"
        },
        "format": {
          "type": "string",
          "const": "[[Artículos]]"
        },
        "areas": {
          "default": [
            "[[Conocimiento]]"
          ],
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "[[Alimentación]]",
              "[[Salud]]",
              "[[Conocimiento]]",
              "[[Pensamiento Estructurado]]",
              "[[Hogar]]",
              "[[Productividad]]",
              "[[Exploración]]",
              "[[Vínculos]]",
              "[[Ejercicio]]",
              "[[Energía Vital]]",
              "[[Trabajo]]",
              "[[Finanzas]]",
              "[[Salud Mental]]",
              "[[Creatividad]]"
            ],
            "description": "Área"
          },
          "description": "Áreas"
        },
        "color": {
          "default": "#3171B2",
          "description": "Color de la nota.",
          "type": "string"
        },
        "icon": {
          "default": "newspaper",
          "description": "Icono de Lucide.",
          "type": "string"
        },
        "banner": {
          "description": "Banner de la nota.",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "url": {
          "description": "URL del artículo",
          "type": "string"
        }
      },
      "required": [
        "title",
        "status",
        "type",
        "format"
      ],
      "description": "Artículo"
    },
    "CatalogArticleSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Título del artículo"
        },
        "description": {
          "description": "Descripción",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "excerpt": {
          "description": "Extracto del artículo",
          "type": "string"
        },
        "author": {
          "description": "Autores",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "published": {
          "description": "Año de publicación",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            }
          ]
        }
      },
      "required": [
        "title"
      ],
      "description": "Artículo: Datos obtenibles de catalogación"
    },
    "DetailedArticleSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "Pendiente",
            "En Proceso",
            "Leído",
            "Consolidado"
          ],
          "description": "Estado de lectura"
        },
        "projects": {
          "description": "Proyectos",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "topics": {
          "description": "Temas",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rating": {
          "description": "Puntuación del artículo",
          "type": "number"
        }
      },
      "required": [
        "status"
      ],
      "description": "Artículo: Datos adicionales"
    },
    "MetaArticleSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "[[Fuentes]]"
        },
        "format": {
          "type": "string",
          "const": "[[Artículos]]"
        },
        "areas": {
          "default": [
            "[[Conocimiento]]"
          ],
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "[[Alimentación]]",
              "[[Salud]]",
              "[[Conocimiento]]",
              "[[Pensamiento Estructurado]]",
              "[[Hogar]]",
              "[[Productividad]]",
              "[[Exploración]]",
              "[[Vínculos]]",
              "[[Ejercicio]]",
              "[[Energía Vital]]",
              "[[Trabajo]]",
              "[[Finanzas]]",
              "[[Salud Mental]]",
              "[[Creatividad]]"
            ],
            "description": "Área"
          },
          "description": "Áreas"
        },
        "color": {
          "default": "#3171B2",
          "description": "Color de la nota.",
          "type": "string"
        },
        "icon": {
          "default": "newspaper",
          "description": "Icono de Lucide.",
          "type": "string"
        },
        "banner": {
          "description": "Banner de la nota.",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "url": {
          "description": "URL del artículo",
          "type": "string"
        }
      },
      "required": [
        "type",
        "format"
      ],
      "description": "Artículo: Metadatos de Nota"
    }
  }
}