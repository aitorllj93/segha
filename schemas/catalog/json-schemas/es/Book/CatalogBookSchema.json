{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Título del libro"
    },
    "subtitle": {
      "description": "Subtítulo del libro",
      "type": "string"
    },
    "description": {
      "description": "Descripción del libro",
      "type": "string"
    },
    "author": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Autores"
    },
    "published": {
      "description": "Año de publicación",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        }
      ]
    },
    "categories": {
      "description": "Géneros",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "title",
    "author"
  ],
  "description": "Libro: Datos obtenibles de catalogación"
}