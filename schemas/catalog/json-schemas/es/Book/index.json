{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "@segha/catalog/es/Book",
  "description": "Schemas for Petroglyph Catalog",
  "$defs": {
    "BookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Título del libro"
        },
        "subtitle": {
          "description": "Subtítulo del libro",
          "type": "string"
        },
        "description": {
          "description": "Descripción del libro",
          "type": "string"
        },
        "author": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Autores"
        },
        "published": {
          "type": "string",
          "description": "Año de publicación"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Géneros"
        },
        "status": {
          "type": "string",
          "enum": [
            "Pendiente",
            "En Proceso",
            "Leído",
            "Consolidado"
          ],
          "description": "Estado de lectura"
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Temas"
        },
        "rating": {
          "type": "number",
          "description": "Puntuación del libro"
        },
        "online_rating": {
          "type": "number",
          "description": "Puntuación en línea"
        },
        "last_time_read": {
          "type": "string",
          "description": "Última vez leído"
        },
        "times_read": {
          "type": "number",
          "description": "Veces leído"
        },
        "type": {
          "type": "string",
          "const": "[[Fuentes]]"
        },
        "format": {
          "type": "string",
          "const": "[[Libros]]"
        },
        "areas": {
          "type": "array",
          "items": {
            "type": "string",
            "const": "[[Knowledge]]"
          }
        },
        "color": {
          "type": "string",
          "const": "#3171B2"
        },
        "icon": {
          "type": "string",
          "const": "book"
        },
        "cover": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "description": "URL del libro en Amazon o similar"
        },
        "read_url": {
          "type": "string",
          "description": "URL de la lectura del libro"
        }
      },
      "required": [
        "title",
        "author",
        "published",
        "categories",
        "status",
        "topics",
        "rating",
        "online_rating",
        "last_time_read",
        "times_read",
        "type",
        "format",
        "areas",
        "color",
        "icon",
        "url",
        "read_url"
      ],
      "additionalProperties": false,
      "description": "Libro"
    },
    "CatalogBookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Título del libro"
        },
        "subtitle": {
          "description": "Subtítulo del libro",
          "type": "string"
        },
        "description": {
          "description": "Descripción del libro",
          "type": "string"
        },
        "author": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Autores"
        },
        "published": {
          "type": "string",
          "description": "Año de publicación"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Géneros"
        }
      },
      "required": [
        "title",
        "author",
        "published",
        "categories"
      ],
      "additionalProperties": false,
      "description": "Libro: Datos obtenibles de catalogación"
    },
    "DetailedBookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "Pendiente",
            "En Proceso",
            "Leído",
            "Consolidado"
          ],
          "description": "Estado de lectura"
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Temas"
        },
        "rating": {
          "type": "number",
          "description": "Puntuación del libro"
        },
        "online_rating": {
          "type": "number",
          "description": "Puntuación en línea"
        },
        "last_time_read": {
          "type": "string",
          "description": "Última vez leído"
        },
        "times_read": {
          "type": "number",
          "description": "Veces leído"
        }
      },
      "required": [
        "status",
        "topics",
        "rating",
        "online_rating",
        "last_time_read",
        "times_read"
      ],
      "additionalProperties": false,
      "description": "Libro: Datos adicionales"
    },
    "MetaBookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "[[Fuentes]]"
        },
        "format": {
          "type": "string",
          "const": "[[Libros]]"
        },
        "areas": {
          "type": "array",
          "items": {
            "type": "string",
            "const": "[[Knowledge]]"
          }
        },
        "color": {
          "type": "string",
          "const": "#3171B2"
        },
        "icon": {
          "type": "string",
          "const": "book"
        },
        "cover": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "description": "URL del libro en Amazon o similar"
        },
        "read_url": {
          "type": "string",
          "description": "URL de la lectura del libro"
        }
      },
      "required": [
        "type",
        "format",
        "areas",
        "color",
        "icon",
        "url",
        "read_url"
      ],
      "additionalProperties": false,
      "description": "Libro: Metadatos de Nota"
    }
  }
}