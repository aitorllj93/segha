{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "@segha/catalog/es/Book",
  "description": "Schemas for Petroglyph Catalog",
  "$defs": {
    "BookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Título del libro"
        },
        "subtitle": {
          "description": "Subtítulo del libro",
          "type": "string"
        },
        "description": {
          "description": "Descripción del libro",
          "type": "string"
        },
        "author": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Autores"
        },
        "published": {
          "description": "Año de publicación",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            }
          ]
        },
        "categories": {
          "description": "Géneros",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string",
          "enum": [
            "Pendiente",
            "En Proceso",
            "Leído",
            "Consolidado"
          ],
          "description": "Estado de lectura"
        },
        "topics": {
          "description": "Temas",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rating": {
          "description": "Puntuación del libro",
          "type": "number"
        },
        "online_rating": {
          "description": "Puntuación en línea",
          "type": "number"
        },
        "last_time_read": {
          "description": "Última vez leído",
          "type": "string"
        },
        "times_read": {
          "description": "Veces leído",
          "type": "number"
        },
        "type": {
          "type": "string",
          "const": "[[Fuentes]]"
        },
        "format": {
          "type": "string",
          "const": "[[Libros]]"
        },
        "areas": {
          "default": [
            "[[Conocimiento]]"
          ],
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "[[Alimentación]]",
              "[[Salud]]",
              "[[Conocimiento]]",
              "[[Pensamiento Estructurado]]",
              "[[Hogar]]",
              "[[Productividad]]",
              "[[Exploración]]",
              "[[Vínculos]]",
              "[[Ejercicio]]",
              "[[Energía Vital]]",
              "[[Trabajo]]",
              "[[Finanzas]]",
              "[[Salud Mental]]",
              "[[Creatividad]]"
            ],
            "description": "Área"
          },
          "description": "Áreas"
        },
        "color": {
          "default": "#3171B2",
          "description": "Color de la nota.",
          "type": "string"
        },
        "icon": {
          "default": "book",
          "description": "Icono de Lucide.",
          "type": "string"
        },
        "cover": {
          "description": "Portada del libro.",
          "type": "string"
        },
        "url": {
          "description": "URL del libro en Amazon o similar",
          "type": "string"
        },
        "read_url": {
          "description": "URL de la lectura del libro",
          "type": "string"
        }
      },
      "required": [
        "title",
        "author",
        "status",
        "type",
        "format"
      ],
      "description": "Libro"
    },
    "CatalogBookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Título del libro"
        },
        "subtitle": {
          "description": "Subtítulo del libro",
          "type": "string"
        },
        "description": {
          "description": "Descripción del libro",
          "type": "string"
        },
        "author": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Autores"
        },
        "published": {
          "description": "Año de publicación",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            }
          ]
        },
        "categories": {
          "description": "Géneros",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "title",
        "author"
      ],
      "description": "Libro: Datos obtenibles de catalogación"
    },
    "DetailedBookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "Pendiente",
            "En Proceso",
            "Leído",
            "Consolidado"
          ],
          "description": "Estado de lectura"
        },
        "topics": {
          "description": "Temas",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rating": {
          "description": "Puntuación del libro",
          "type": "number"
        },
        "online_rating": {
          "description": "Puntuación en línea",
          "type": "number"
        },
        "last_time_read": {
          "description": "Última vez leído",
          "type": "string"
        },
        "times_read": {
          "description": "Veces leído",
          "type": "number"
        }
      },
      "required": [
        "status"
      ],
      "description": "Libro: Datos adicionales"
    },
    "MetaBookSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "[[Fuentes]]"
        },
        "format": {
          "type": "string",
          "const": "[[Libros]]"
        },
        "areas": {
          "default": [
            "[[Conocimiento]]"
          ],
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "[[Alimentación]]",
              "[[Salud]]",
              "[[Conocimiento]]",
              "[[Pensamiento Estructurado]]",
              "[[Hogar]]",
              "[[Productividad]]",
              "[[Exploración]]",
              "[[Vínculos]]",
              "[[Ejercicio]]",
              "[[Energía Vital]]",
              "[[Trabajo]]",
              "[[Finanzas]]",
              "[[Salud Mental]]",
              "[[Creatividad]]"
            ],
            "description": "Área"
          },
          "description": "Áreas"
        },
        "color": {
          "default": "#3171B2",
          "description": "Color de la nota.",
          "type": "string"
        },
        "icon": {
          "default": "book",
          "description": "Icono de Lucide.",
          "type": "string"
        },
        "cover": {
          "description": "Portada del libro.",
          "type": "string"
        },
        "url": {
          "description": "URL del libro en Amazon o similar",
          "type": "string"
        },
        "read_url": {
          "description": "URL de la lectura del libro",
          "type": "string"
        }
      },
      "required": [
        "type",
        "format"
      ],
      "description": "Libro: Metadatos de Nota"
    }
  }
}