{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "[[Fuentes]]"
    },
    "format": {
      "type": "string",
      "const": "[[Libros]]"
    },
    "areas": {
      "default": [
        "[[Conocimiento]]"
      ],
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "[[Alimentación]]",
          "[[Salud]]",
          "[[Conocimiento]]",
          "[[Pensamiento Estructurado]]",
          "[[Hogar]]",
          "[[Productividad]]",
          "[[Exploración]]",
          "[[Vínculos]]",
          "[[Ejercicio]]",
          "[[Energía Vital]]",
          "[[Trabajo]]",
          "[[Finanzas]]",
          "[[Salud Mental]]",
          "[[Creatividad]]"
        ],
        "description": "Área"
      },
      "description": "Áreas"
    },
    "color": {
      "default": "#3171B2",
      "description": "Color de la nota.",
      "type": "string"
    },
    "icon": {
      "default": "book",
      "description": "Icono de Lucide.",
      "type": "string"
    },
    "cover": {
      "description": "Portada del libro.",
      "type": "string"
    },
    "url": {
      "description": "URL del libro en Amazon o similar",
      "type": "string"
    },
    "read_url": {
      "description": "URL de la lectura del libro",
      "type": "string"
    }
  },
  "required": [
    "type",
    "format"
  ],
  "description": "Libro: Metadatos de Nota"
}