{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "[[Fuentes]]"
    },
    "format": {
      "type": "string",
      "const": "[[Películas]]"
    },
    "areas": {
      "default": [
        "[[Creatividad]]"
      ],
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "[[Alimentación]]",
          "[[Salud]]",
          "[[Conocimiento]]",
          "[[Pensamiento Estructurado]]",
          "[[Hogar]]",
          "[[Productividad]]",
          "[[Exploración]]",
          "[[Vínculos]]",
          "[[Ejercicio]]",
          "[[Energía Vital]]",
          "[[Trabajo]]",
          "[[Finanzas]]",
          "[[Salud Mental]]",
          "[[Creatividad]]"
        ],
        "description": "Área"
      },
      "description": "Áreas"
    },
    "color": {
      "default": "#BE9207",
      "description": "Color de la nota.",
      "type": "string"
    },
    "icon": {
      "default": "movie",
      "description": "Icono de Lucide.",
      "type": "string"
    },
    "cover": {
      "description": "Portada de la película.",
      "type": "string"
    },
    "url": {
      "type": "string",
      "description": "URL de la película en IMDB o similar"
    },
    "watch_url": {
      "description": "URL de la película en streaming",
      "type": "string"
    }
  },
  "required": [
    "type",
    "format",
    "url"
  ],
  "description": "Película: Metadatos de Nota"
}