{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "[[Fuentes]]"
    },
    "format": {
      "type": "string",
      "const": "[[Películas]]"
    },
    "areas": {
      "type": "array",
      "items": {
        "type": "string",
        "const": "[[Creatividad]]"
      }
    },
    "color": {
      "type": "string",
      "const": "#BE9207"
    },
    "icon": {
      "type": "string",
      "const": "movie"
    },
    "cover": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "description": "URL de la película en IMDB o similar"
    },
    "watch_url": {
      "type": "string",
      "description": "URL de la película en streaming"
    }
  },
  "required": [
    "type",
    "format",
    "areas",
    "color",
    "icon",
    "url",
    "watch_url"
  ],
  "additionalProperties": false,
  "description": "Película: Metadatos de Nota"
}