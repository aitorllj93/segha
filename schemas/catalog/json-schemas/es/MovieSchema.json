{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Título de la película"
    },
    "description": {
      "description": "Descripción de la película",
      "type": "string"
    },
    "author": {
      "description": "Autores. Guionistas, directores, productores, etc.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "actors": {
      "description": "Actores",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "published": {
      "description": "Año de publicación",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        }
      ]
    },
    "genres": {
      "description": "Géneros",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "Pendiente",
        "En progreso",
        "Visto"
      ],
      "description": "Estado de visualización"
    },
    "topics": {
      "description": "Temas",
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "rating": {
      "description": "Puntuación de la película",
      "type": "number"
    },
    "online_rating": {
      "description": "Puntuación en línea",
      "type": "number"
    },
    "last_time_watched": {
      "description": "Última vez vista",
      "type": "string"
    },
    "times_watched": {
      "description": "Veces vista",
      "type": "number"
    },
    "type": {
      "type": "string",
      "const": "[[Fuentes]]"
    },
    "format": {
      "type": "string",
      "const": "[[Películas]]"
    },
    "areas": {
      "default": [
        "[[Creatividad]]"
      ],
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "[[Alimentación]]",
          "[[Salud]]",
          "[[Conocimiento]]",
          "[[Pensamiento Estructurado]]",
          "[[Hogar]]",
          "[[Productividad]]",
          "[[Exploración]]",
          "[[Vínculos]]",
          "[[Ejercicio]]",
          "[[Energía Vital]]",
          "[[Trabajo]]",
          "[[Finanzas]]",
          "[[Salud Mental]]",
          "[[Creatividad]]"
        ],
        "description": "Área"
      },
      "description": "Áreas"
    },
    "color": {
      "default": "#BE9207",
      "description": "Color de la nota.",
      "type": "string"
    },
    "icon": {
      "default": "movie",
      "description": "Icono de Lucide.",
      "type": "string"
    },
    "cover": {
      "description": "Portada de la película.",
      "type": "string"
    },
    "url": {
      "type": "string",
      "description": "URL de la película en IMDB o similar"
    },
    "watch_url": {
      "description": "URL de la película en streaming",
      "type": "string"
    }
  },
  "required": [
    "title",
    "status",
    "type",
    "format",
    "url"
  ],
  "description": "Película"
}