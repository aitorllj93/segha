{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "Pendiente",
        "En progreso",
        "Visto"
      ],
      "description": "Estado de visualización"
    },
    "projects": {
      "description": "Proyectos",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "topics": {
      "description": "Temas",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "rating": {
      "description": "Puntuación del artículo",
      "type": "number"
    }
  },
  "required": [
    "status"
  ],
  "description": "Vídeo de YouTube: Datos adicionales"
}